{
    "name": "n8n",
    "description": "Desplega N8N en Heroku",
    "keywords": [
      "n8n",
      "node",
      "automation"
    ],
    "website": "https://n8n.io",
    "repository": "https://github.com/aitorroma/n8n-heroku",
    "logo": "https://raw.githubusercontent.com/n8n-io/n8n/master/packages/editor-ui/public/favicon-32x32.png",
    "success_url": "/",
    "stack": "container",
    "env": {
      "N8N_BASIC_AUTH_ACTIVE": {
        "description": "Activar el usuario y contrase침a.",
        "value": "true"
      },
      "GENERIC_TIMEZONE": {
        "description": "Timezone que usaras en la instancia de n8n.",
        "value": "Europe/Madrid"
      },
      "N8N_BASIC_AUTH_USER": {
        "description": "Usuario que usar치s para acceder a n8n.",
        "value": "user"
      },
      "N8N_BASIC_AUTH_PASSWORD": {
        "description": "Contrase침a que usar치s para acceder a n8n.",
        "value": "pass"
      },
      "N8N_ENCRYPTION_KEY": {
        "description": "This is to set the n8n encryption key to a static value, so that heroku doesnt override it, causing AUTH to fail",
        "value": "MdRRn2jiZuVeh5tI77A6"
      },
      "PGSSLMODE": {
        "description": "Heroku made a change so SSL is required to connect to Postgres",
        "value": "require"
      },
      "NODE_TLS_REJECT_UNAUTHORIZED": {
        "description": "Dejar este valor a 0",
        "value": 0
      }
    },
    "formation": {
      "web": {
        "quantity": 1,
        "size": "free"
      }
    },
    "addons": [
      {
        "plan": "heroku-postgresql",
        "options": {
          "version": "11"
        }
      },
      {
        "plan": "papertrail:choklad"
      }
    ]
  }
  
